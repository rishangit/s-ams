{
  "name": "s-ams-backend",
  "version": "1.0.0",
  "description": "Backend API for S-AMS system",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "start:prod": "NODE_ENV=production node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "npm run build:clean && npm run build:copy",
    "build:clean": "rimraf dist",
    "build:copy": "npm run copy:src && npm run copy:uploads && npm run copy:config",
    "copy:src": "cpx \"src/**/*\" dist/src",
    "copy:uploads": "cpx \"uploads/**/*\" dist/uploads",
    "copy:config": "cpx \"config.js\" dist/ && cpx \"production.env\" dist/.env",
    "db:migrate": "node scripts/migrate-mysql.js",
    "db:create:mysql": "node scripts/create-mysql-db.js",
    "db:seed": "node src/database/seed.js",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:start:prod": "pm2 start ecosystem.config.cjs --env production",
    "pm2:stop": "pm2 stop s-ams-backend",
    "pm2:restart": "pm2 restart s-ams-backend",
    "pm2:reload": "pm2 reload s-ams-backend",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs s-ams-backend"
  },
  "keywords": [
    "express",
    "mysql",
    "api",
    "authentication"
  ],
  "author": "S-AMS Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "mysql2": "^3.14.4",
    "pm2": "^6.0.10"
  },
  "devDependencies": {
    "cpx": "^1.2.1",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5"
  }
}
